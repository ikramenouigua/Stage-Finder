                                        <div class="text-start ps-4">
                                            <h5 class="mb-3">{{ offre_entreprise.name }}</h5>
                                            <span class="text-truncate me-3"><i sclass="fa fa-map-marker-alt text-primary me-2"></i>{{offre_entreprise.ville}}</span>
                                            <span class="text-truncate me-3"><i class="far fa-clock text-primary me-2"></i>{{offre_entreprise.duree}} mois</span>
                                            <span class="text-truncate me-0"><i class="far fa-money-bill-alt text-primary me-2"></i>{{offre_entreprise.remuneration}}</span>
                                        </div>
                                    </div>
                                    <div class="col-sm-12 col-md-4 d-flex flex-column align-items-start align-items-md-end justify-content-center">
                                        <div class="d-flex mb-3">
                                            <a class="btn btn-light btn-square me-3" href="{{ path('app_offre_entreprise_show', {'id': offre_entreprise.id}) }}"><i class="fa fa-eye text-primary"></i></a>
                                            <a class="btn btn-light btn-square me-3" href=""><form method="post" action="{{ path('app_offre_entreprise_delete', {'id': offre_entreprise.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre_entreprise.id) }}">
   
</form>
<i class="fa fa-trash text-primary" ></i></a>
                                             <a class="btn btn-light btn-square me-3" href="{{ path('app_offre_entreprise_edit', {'id': offre_entreprise.id}) }}"><i class="fa fa-edit"></i></a>
                                             
                                           
                                        </div>
                                        <small class="text-truncate">3 personnes ont postules</small>
