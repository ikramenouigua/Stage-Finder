    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for hello in hellos %}
            <tr>
                <td>{{ hello.id }}</td>
                <td>{{ hello.name }}</td>
                <td>
                    <a href="{{ path('app_hello_show', {'id': hello.id}) }}">show</a>
